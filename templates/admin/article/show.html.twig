{% extends 'base-admin.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ article.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ article.description }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-info" href="{{ path('admin_article_index') }}">back to list</a>

    <a class="btn btn-outline-primary" href="{{ path('admin_article_edit', {'id': article.id}) }}">edit</a>

    {{ include('admin/article/_delete_form.html.twig') }}
{% endblock %}
