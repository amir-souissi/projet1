{% extends 'base-admin.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Liste des Articles <span class="text-danger"> [ {{ articles|length }} ]</span></h1>

    <table class="table">
        <thead>
            <tr>

                <th>Name</th>
                <th>Description</th>
                <th>Category</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>

                <td>{{ article.name }}</td>
                <td>{{ article.description }}</td>
                <td>{% if article.category is not null %}{{ article.category.description }}{% else %} **** {% endif %}</td>
                <td>
                    <a class="btn btn-outline-secondary m-0 p-2" href="{{ path('admin_article_show', {'id': article.id}) }}">show</a>
                    <a class="btn btn-outline-primary m-0 p-2" href="{{ path('admin_article_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-outline-success" href="{{ path('admin_article_new') }}">Create new</a>
{% endblock %}
